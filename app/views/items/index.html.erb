<h1>ITEMS</h1>

<% if @items.empty? %>
  <b>No items in store</b>
<% else %>
  <table>
      <tr>
          <th>item id</th>
          <th>Name</th>
          <th>Price</th>
          <th></th>
      </tr>

      <% @items.each do |i| %>

        <tr>
            <td><%= i.id %> </td>
            <td><%= link_to i.name, item_path(i) %> </td>
            <td><%= i.price %> $</td>
            <td><%= link_to "Delete item", i, method: :delete, data: {confirm: "Are you really want to delete this one?"} %></td>
        </tr>
      <% end %>
  </table>

<% end %>

<br/>
<p> <%=  link_to "Create new", item_path("new") %> </p>
